@model DiaryEntry

<div class="container mt-5 d-flex justify-content-center align-items-start" style="max-width: 100%; padding-top: 20px;">
    <div class="col-md-6">
        <div class="card shadow" style="border-radius: 15px;">
            <div class="card-header bg-danger text-white text-center" style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                <h2>Edit Diary Entry</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter a Title" readonly style="background-color: #e9ecef; border-radius: 5px;" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Content" class="form-label">Content</label>
                        <textarea asp-for="Content" rows="5" class="form-control" placeholder="Enter Content" readonly style="background-color: #e9ecef; border-radius: 5px;"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Created" class="form-label">Date</label>
                        <input asp-for="Created" class="form-control" type="date" readonly style="background-color: #e9ecef; border-radius: 5px;" />
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger" style="border-radius: 25px;">Save</button>
                        <a asp-controller="Diary" asp-action="Index" class="btn btn-secondary" style="border-radius: 25px;">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}