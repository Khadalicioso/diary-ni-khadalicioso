@model List<DiaryEntry>

<div class="container mt-4" style="max-width: 1200px; margin: auto;">
    <div class="row mb-4 d-flex justify-content-between align-items-center">
        <div class="col-md-6">
            <a class="btn btn-primary" href="/Diary/Create" style="border-radius: 25px; padding: 10px 20px;">
                <i class="bi bi-journal-plus"></i> Add New Diary
            </a>
        </div>
        <div class="col-md-6 text-md-end">
            <h3 class="text-primary" style="font-family: 'Arial', sans-serif; font-weight: bold;">Diary ni Khadalicioso</h3>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped" style="border-radius: 10px; overflow: hidden;">
            <thead class="table-light">
                <tr>
                    <th style="text-align: left;">Title</th>
                    <th style="text-align: left;">Content</th>
                    <th style="text-align: left;">Date</th>
                    <th style="text-align: left;">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.Created.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-controller="Diary" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm" style="border-radius: 20px; margin-right: 5px;"><i class="bi bi-pencil"></i> Edit</a>
                        <a asp-controller="Diary" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm" style="border-radius: 20px;"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
