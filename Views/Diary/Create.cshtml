@model DiaryEntry

<div class="container mt-5 d-flex justify-content-center align-items-start" style="max-width: 100%; padding-top: 20px;">
    <div class="col-md-6">
        <div class="card shadow" style="border-radius: 15px;">
            <div class="card-header bg-info text-white text-center" style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                <h2>Create Diary Entry Details</h2>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" readonly style="background-color: #e9ecef; border-radius: 5px;" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" rows="5" class="form-control" readonly style="background-color: #e9ecef; border-radius: 5px;"></textarea>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Created" class="form-label">Date</label>
                    <input asp-for="Created" class="form-control" type="date" readonly style="background-color: #e9ecef; border-radius: 5px;" />
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-controller="Diary" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="border-radius: 25px;">Edit</a>
                    <a asp-controller="Diary" asp-action="Index" class="btn btn-secondary" style="border-radius: 25px;">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
